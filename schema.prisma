// database
datasource db {
  provider = "sqlite"
  url      = "file:database.db"
}

// generator
generator client {
  provider = "prisma-client-py"
  interface = "asyncio"
}

model Server {
  version         Version  @relation(fields: [versionProtocol], references: [protocol])
  players         Player[]
  description     String
  favicon         String?
  address         String   @id @unique
  max_players     String
  online_players  String
  versionProtocol Int
}

model Player {
  uuid     String   @id @unique
  username String
  servers  Server[]
}

model Version {
  protocol Int      @id @unique
  name     String
  Server   Server[]
}